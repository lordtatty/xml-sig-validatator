builds:
  - binary: xml-sig-validator
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0

release:
  prerelease: auto

brews:
  - name: xml-sig-validator
    homepage: "https://github.com/lordtatty/xml-sig-validator"
    tap:
      owner: lordtatty
      name: homebrew-tools
      token: ${{ .Env.HOMEBREW_TAP_GITHUB_TOKEN }}

checksum:
  name_template: "checksums.txt"
